include ./variable-data

mixin cartItem
    - var num = 0
    .cart.dropdown.pr-3.pr-md-1
        a(href='#').mr-lg-3.show-amount-item
            img(src='./images/HOME/shoppoing-cart.png', alt='')
            span.badge.badge-pill.badge-success 0
        .dropdown-menu.w-100
            .cart_item
                .cart_item--sub
                hr
                // Total price in cart
                .total--price
                a(href='shopping-cart.html')
                    button.text-uppercase.btn.btn-dark.mb-3.mt-2 Giỏ hàng
    a(href='#')
        img(src='./images/HOME/btn-search.png', alt='')

.container
    // Brand
    a.navbar-brand(href='#')
        img(src='./images/HOME/logo.png', alt='')
    // Shopping cart and Search
    #manager--tool--1.img--tool
        + cartItem
    // Toggler/collapsibe Button
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsibleNavbar')
        i.fa.fa-bars
    // Navbar links
    #collapsibleNavbar.collapse.navbar-collapse
        ul.navbar-nav.m-auto
            li.nav-item
                a.nav-link.text-uppercase(href='index.html') TRANG CHỦ
            li.nav-item
                a.nav-link.text-uppercase(href='about-us.html') GIỚI THIỆU
            li.nav-item.dropdown
                a.nav-link.text-uppercase(href='product.html') Sản phẩm
                .dropdown-menu
                    .menu_item
                        for item in arrTitleDropDown
                            // Item 1
                            .menu_item--sub
                                h6.text-dark.text-uppercase= item.name
                                hr
                                ul.pl-0
                                    for itemSub in item.data
                                        li
                                            a(href='#')= itemSub
            li.nav-item
                a.nav-link.text-uppercase(href='blog.html') tin tức
            li.nav-item
                a.nav-link.text-uppercase(href='contact.html') bản đồ
            li.nav-item
                a.nav-link.text-uppercase(href='contact.html') liên hệ
    // Shopping cart and Search
    #manager--tool--2.img--tool
        + cartItem
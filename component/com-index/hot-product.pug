- var arrItem =[{path: './images/HOME/product_1.jpg', title: 'TYFFANY'}, {path: './images/HOME/product_2.jpg', title: 'OHUI'}, {path: './images/HOME/product_3.jpg', title: 'HOME'}, {path: './images/HOME/product_4.jpg', title: 'DEBORA'}, {path: './images/HOME/product_5.jpg', title: 'SARVON'}, {path: './images/HOME/product_6.jpg', title: 'TYFFANY'}]

mixin itemSub
    h3.mb-4 Mỹ phẩm châu Âu
    .product--price.mb-3
        span
            | 355.000
            sup đ
        span
            | 450.000
            sup đ
    .product--btn--buy.pb-3
        button.btn.btn-custom Mua hàng
        button.btn.btn-custom.ml-1
            img(src='./images/HOME/heart.png', alt='heart')
        button.btn.btn-custom.ml-1
            img(src='./images/HOME/reload.png', alt='reload')

mixin item(path, title)
    .item
        .img-thumbnail
            img.img-fluid.p-4(src=''+path+'', alt='product 1')
        .product_item--info.text-center.mt-3
            h6= title
            + itemSub

// HOT Product
.container-fluid.product--bg
    .container
        // Hot Product
        section.product--hot.pt-4.pb-4
            .info--select.text-md-center
                h5 Sản phẩm mới
                h4 Sản phẩm bán chạy
                h5 Sản phẩm đặc biệt
            .line--img.mt-2
                img.img-fluid(src='./images/HOME/line.png', alt='Line')
            .product--choice.mt-3
                .product_item--choice--1
                    ul.tag-product
                        li
                            a(href='#') Mỹ phẩm
                        li
                            a(href='#') Chăm sóc da
                        li
                            a(href='#') Dành cho tóc
                .product_item--choice--1.pl-md-3
                    ul.tag-product
                        li
                            a(href='#') Nước Hoa
                        li
                            a(href='#') Trang sức
                        li#last-child.mr-sm-5
                            a(href='#') Quà tặng

    // SlideShow
    .product--carousel.owl-carousel.owl-theme.pb-3
        for it in arrItem
            + item(it.path, it.title)